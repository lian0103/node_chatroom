<%- include('partials/header'); -%>

<div class="container mx-auto w-screen h-screen">
  <div class="flex justify-between">
    <h1>
      chatRoom , <span id="spanUser"></span> 歡迎進入 
      <p>上線人數：<span class="onlineCount">0</span></p>
    </h1>
    <span id="btnLogout" class="p-3 text-blue-300 cursor-pointer hidden">
      登出</span
    >
  </div>

  <div class="msgbox p-0 lg:p-4"></div>
  <div class="border-t-2 border-gray-200 px-4 pt-4 mb-2 sm:mb-0">
    <div class="relative flex px-2">
      <input
        id="msgInput"
        type="text"
        placeholder="Write Something"
        class="
          w-full
          focus:outline-none focus:placeholder-gray-400
          text-gray-600
          placeholder-gray-600
          pl-12
          bg-gray-200
          rounded-full
          py-3
        "
      />
      <div class="absolute right-0 items-center inset-y-0 sm:flex">
        <button
          id="sendMsg"
          type="button"
          class="
            inline-flex
            items-center
            justify-center
            rounded-full
            h-12
            w-12
            transition
            duration-500
            ease-in-out
            text-white
            bg-blue-500
            hover:bg-blue-400
            focus:outline-none
          "
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="h-6 w-6 transform rotate-90"
          >
            <path
              d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<div
  id="loginBox"
  style="display: none"
  class="
    grid
    min-h-screen
    place-items-center
    bg-gray-600
    w-screen
    h-screen
    fixed
    left-0
    top-0
    z-10
    bg-opacity-75
  "
>
  <div class="w-11/12 p-12 bg-white sm:w-8/12 md:w-1/2 lg:w-5/12">
    <h1 class="text-xl font-normal">請輸入名稱</h1>
    <div class="mt-6">
      <label
        for="userName"
        class="block text-xs font-semibold text-gray-600 uppercase"
        >名稱</label
      >
      <input
        id="userName"
        type="text"
        name="userName"
        class="
          block
          w-full
          p-3
          mt-2
          text-gray-700
          bg-gray-200
          appearance-none
          focus:outline-none focus:bg-gray-300 focus:shadow-inner
        "
        required
      />
      <p class="errMsg text-red-300"></p>
      <div class="flex justify-between">
        <button
          id="btnLogin"
          class="
            w-5/12
            py-3
            mt-6
            font-medium
            tracking-widest
            text-white
            uppercase
            rounded
            bg-green-400
            shadow-lg
            focus:outline-none
            hover:shadow-none
          "
        >
          登入
        </button>
        <button
          id="btnLogin_signup"
          class="
            w-5/12
            py-3
            mt-6
            font-medium
            tracking-widest
            text-white
            uppercase
            rounded
            bg-green-400
            shadow-lg
            focus:outline-none
            hover:shadow-none
          "
        >
          註冊新名
        </button>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer'); -%>
